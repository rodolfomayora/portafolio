{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./src",
    "paths": {
      "#/*": ["./*"],
      "#assets/*": ["./assets/*"],
      "#components/*": ["./components/*"],
      "#config/*": ["./config/*"],
      "#data/*": ["./data/*"],
      "#hooks/*": ["./hooks/*"],
      "#icons/*": ["./assets/icons/*"],
      "#layouts/*": ["./layouts/*"],
      "#lib/*": ["./lib/*"],
      "#locales/*": ["./locales/*"],
      "#styles/*": ["./styles/utils/*"],
      "#types/*": ["./types/*"],
      "#utils/*": ["./utils/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mjs"],
  "exclude": ["node_modules"]
}
